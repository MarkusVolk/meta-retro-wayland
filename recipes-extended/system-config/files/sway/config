# mod key
set $mod Mod1

# terminal
set $term "/usr/bin/foot"

# movement
set $left left
set $down down
set $up up
set $right right

# hide cursor on inactivity
seat * hide_cursor 8000

# set cursor theme
seat * xcursor_theme capitaine-cursors-light 36

# application launcher
set $menu nwggrid

# Output configuration
include ~/.config/sway/outputs

# Idle configuration
#exec swayidle -w \
#         timeout 300 'swaylock -f -c 000000' \
#         timeout 600 'swaymsg "output * dpms off"' \
#         resume 'swaymsg "output * dpms on"' \
#         before-sleep 'swaylock -f -c 000000'

# Input configuration
input * {
    xkb_layout de
    xkb_variant nodeadkeys
    natural_scroll disabled
    dwt enabled
    accel_profile "flat" # disable mouse acceleration (enabled by default; to set it manually, use "adaptive" instead of "flat")
    pointer_accel 0.5 # set mouse sensitivity (between -1 and 1)
}

# init wayland overlay bar
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier "$mod"

# start a terminal
bindsym $mod+Return exec $term

# kill focused window
bindsym $mod+Shift+q kill

# start application launcher
bindsym $mod+d exec $menu -i

# screenshot
bindsym $mod+Shift+c exec grim -g "$(slurp)" - | swappy -f -

# mouse shit
focus_follows_mouse no
mouse_warping none

# lock the god dam screen
# bindsym Mod4+l exec swaylock -c 101010

# Focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Moving Windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Fullscreen
bindsym $mod+f fullscreen toggle

# Container Layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle Tiling / Floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Split
#bindsym $mod+b splith
#bindsym $mod+v splitv

# Resize Mode
bindsym $mod+r mode "resize"

# Reload The Configuration File
bindsym $mod+Shift+r reload

# exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning \
    -m 'Do you really want to exit sway? This will end your Wayland session.' \
    -b 'Yes, exit sway' 'swaymsg exit'

# set colors
set $fg #ffffff
set $bg #1a181b
set $ab #115fe2
set $iab #525b6a
set $ub #d41919

#class                  border  backgr.  text  indicator child_border
client.focused           $ab	  $bg     $fg    $bg        $ab
client.focused_inactive  $bg	  $bg     $fg    $bg        $bg
client.unfocused         $bg     $bg     $fg    $bg        $bg
client.urgent            $ub	  $bg     $fg    $bg        $ub
client.placeholder	 $bg	  $bg     $fg    $bg        $bg

focus_on_window_activation focus

set $ws1 "1:Kodi  "
set $ws2 "2:Retroarch   "
set $ws3 "3:Chromium  "
set $ws4 "4:Thunar  "
set $ws5 "5:Geary  "
set $ws6 "6:"
set $ws7 "7:"
set $ws8 "8:"
set $ws9 "9:"
set $ws10 "10:Mpv  "

assign [app_id="Kodi"] $ws1
assign [app_id="retroarch"] $ws2
assign [app_id="chromium-browser"] $ws3
assign [app_id="thunar"] $ws4
assign [app_id="geary"] $ws5
assign [app_id="mpv"] $ws10
assign [app_id="swappy"] $ws4

for_window [app_id="Kodi"] fullscreen enable
for_window [app_id="Kodi"] focus
for_window [app_id="retroarch"] fullscreen enable
for_window [app_id="retroarch"] focus
for_window [app_id="thunar"] focus
for_window [app_id="geary"] focus
for_window [app_id="chromium-browser"] focus
for_window [app_id="mpv"] fullscreen enable
for_window [app_id="mpv"] focus
for_window [app_id="swappy"] focus


bindsym $mod+1 workspace $ws1; exec ~/.config/sway/scripts/kodi.sh
bindsym $mod+2 workspace $ws2; exec ~/.config/sway/scripts/retroarch.sh
bindsym $mod+3 workspace $ws3; exec ~/.config/sway/scripts/chromium.sh
bindsym $mod+4 workspace $ws4; exec ~/.config/sway/scripts/thunar.sh
bindsym $mod+5 workspace $ws5; exec ~/.config/sway/scripts/geary.sh
bindsym $mod+6 workspace $ws6;
bindsym $mod+7 workspace $ws7;
bindsym $mod+8 workspace $ws8;
bindsym $mod+9 workspace $ws9;
bindsym $mod+0 workspace $ws10;

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym F11 exec "~/.config/sway/scripts/rotate_workspaces.sh prev"
bindsym F12 exec "~/.config/sway/scripts/rotate_workspaces.sh next"

# Always
exec_always ~/.config/waybar/scripts/waybar.sh

# Not Always
exec ~/.azotebg &
exec /usr/bin/xdg-user-dirs-update &
exec /usr/libexec/xfce-polkit &
exec /usr/bin/thunar --daemon &
exec /usr/bin/blueman-applet &
exec /usr/bin/autotiling-rs &
exec /usr/bin/inactive-windows-transparency.py &
exec /usr/bin/wlsunset -l 49.5 -L 11.1 &
exec /usr/bin/mako &

# Startup program launcher
exec swaymsg "workspace $ws1; exec kodi;"

bindsym XF86AudioRaiseVolume exec pamixer -ui 5 && pamixer --get-volume > $WOBSOCK
bindsym XF86AudioLowerVolume exec pamixer -ud 5 && pamixer --get-volume > $WOBSOCK
bindsym XF86AudioMute exec pamixer --toggle-mute && ( [ $(pamixer --get-mute) = "true" ] && echo 0 > $WOBSOCK ) || pamixer --get-volume > $WOBSOCK
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessUp exec light -A 5 && light -G | cut -d'.' -f1 > $WOBSOCK
bindsym XF86MonBrightnessDown exec light -U 5 && light -G | cut -d'.' -f1 > $WOBSOCK
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86Search exec nwggrid

gaps inner 10
default_border pixel 2
default_floating_border pixel 2
titlebar_border_thickness 0
smart_gaps on
hide_edge_borders --i3 smart
